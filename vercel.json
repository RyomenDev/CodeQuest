{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/node",
            "config": {
                "includeFiles": [
                    "package.json"
                ]
            }
        },
        {
            "src": "./index.js",
            "use": "@vercel/node"
        },
        {
            "src": "views/**/*.ejs",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.js"
        }
    ]
}